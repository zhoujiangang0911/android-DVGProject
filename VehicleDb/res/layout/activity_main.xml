<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
   android:orientation="vertical"
    >
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="传感器数据"
        android:textColor="#b85b85"
        android:textSize="18sp"
        />
    
    

    <LinearLayout 
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通信协议版本号:"
            />
         <EditText 
             android:id="@+id/tv_version"
             android:paddingLeft="10dp"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1"
            />
    </LinearLayout>
     <LinearLayout 
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="厂商编号:"
            />
         <EditText 
              android:id="@+id/tv_oem_id"
            android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:paddingLeft="10dp"
            />
    </LinearLayout>
     <LinearLayout 
        android:paddingLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="外设类型编号:"
            />
         <EditText
              android:id="@+id/tv_dev_type" 
            android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:paddingLeft="10dp"
            />
    </LinearLayout>
     <LinearLayout 
        android:paddingLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="命令类型:"
            />
         <EditText 
              android:id="@+id/tv_cmd"
            android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:paddingLeft="10dp"
            />
    </LinearLayout>
     <LinearLayout 
        android:paddingLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="外设的UUID:"
            />
         <EditText 
              android:id="@+id/tv_uuid"
            android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:paddingLeft="10dp"
            />
    </LinearLayout>
     <LinearLayout 
        android:paddingLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间戳:"
            />
         <EditText 
              android:id="@+id/tv_date"
            android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:paddingLeft="10dp"
            />
    </LinearLayout>
     <LinearLayout 
        android:paddingLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="经度："
            />
         <EditText
              android:id="@+id/tv_latitude" 
            android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:paddingLeft="10dp"
            />
    </LinearLayout>
     <LinearLayout 
        android:paddingLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="纬度:"
            />
         <EditText 
              android:id="@+id/tv_longitude"
            android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:paddingLeft="10dp"
            />
    </LinearLayout>
     <LinearLayout 
        android:paddingLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="海拔:"
            />
         <EditText 
              android:id="@+id/tv_elevation"
            android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:paddingLeft="10dp"
            />
    </LinearLayout>
     <LinearLayout 
        android:paddingLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="速度:"
            />
         <EditText 
              android:id="@+id/tv_speed"
            android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:paddingLeft="10dp"
            />
    </LinearLayout>
     <LinearLayout 
        android:paddingLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="方向:"
            />
         <EditText 
              android:id="@+id/tv_angle"
            android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:paddingLeft="10dp"
            />
    </LinearLayout>
     <LinearLayout 
        android:paddingLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="采集量编号:"
            />
         <EditText 
              android:id="@+id/tv_sensor_id"
            android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:paddingLeft="10dp"
            />
    </LinearLayout>
     <LinearLayout 
        android:paddingLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="采集值类型:"
            />
         <EditText 
              android:id="@+id/tv_value_type"
            android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:paddingLeft="10dp"
            />
    </LinearLayout>
       <LinearLayout 
        android:paddingLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="采集值:"
            />
         <EditText 
              android:id="@+id/tv_value"
            android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:paddingLeft="10dp"
            />
    </LinearLayout>
     
    <Button 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="添加数据"
        android:id="@+id/btn_insert"
        />
    <Button 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="查看数据"
        android:id="@+id/btn_select"
        />
    <Button 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="更新数据"
        android:id="@+id/btn_update"
        />
     <Button 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="删除数据"
        android:id="@+id/btn_delete"
        />
    

</LinearLayout>
</ScrollView>
